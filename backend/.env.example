# ============================================
# KnowBase 环境变量配置
# ============================================

# ============== 基础配置 ==============
APP_NAME=KnowBase
ENVIRONMENT=development
DEBUG=true

# ============== 安全配置 ==============
# 开发环境使用固定密钥，生产环境必须更换！
SECRET_KEY=dev-secret-key-please-change-in-production-32chars
ENCRYPTION_KEY=dev-encryption-key-change-me-32ch
ACCESS_TOKEN_EXPIRE_MINUTES=1

# ============== 数据库配置 ==============
# PostgreSQL
DATABASE_URL=postgresql+asyncpg://knowbase:knowbase123@localhost:5432/knowbase

# Redis
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=redis123

# ============== 对象存储配置 ==============
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin123
MINIO_BUCKET=knowbase
MINIO_SECURE=false

# ---------- 向量数据库配置 ----------
VECTOR_DB_TYPE=qdrant
QDRANT_HOST=localhost
QDRANT_PORT=6333

# ---------- 安全配置 ----------
# JWT 密钥 (使用 openssl rand -hex 32 生成)
SECRET_KEY=your-secret-key-change-in-production-use-openssl-rand-hex-32

# 加密密钥 (使用 python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())")
ENCRYPTION_KEY=your-encryption-key-change-in-production

# ============== JWT 配置 ==============
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# ============== CORS 配置 ==============
CORS_ORIGINS=["http://localhost:3000","http://localhost:5173","http://127.0.0.1:3000"]

# ============== 全文检索配置 ==============
# 可选: postgres | elasticsearch
FULLTEXT_ENGINE=postgres

# Elasticsearch (仅当 FULLTEXT_ENGINE=elasticsearch 时需要)
# 启用 Elasticsearch 需要:
# 1. 安装依赖: pip install elasticsearch[async]
# 2. 启动 ES: docker-compose -f docker-compose.elasticsearch.yml up -d
# 3. 设置 FULLTEXT_ENGINE=elasticsearch
# ELASTICSEARCH_URL=http://localhost:9200
# ELASTICSEARCH_INDEX_PREFIX=knowbase
# ELASTICSEARCH_USERNAME=
# ELASTICSEARCH_PASSWORD=
# ELASTICSEARCH_USE_CHINESE=false  # 是否使用中文分词器（需要安装 IK 插件）
